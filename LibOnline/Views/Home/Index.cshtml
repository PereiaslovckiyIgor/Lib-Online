    <div class="span3 sidebar page-rigth-sidebar">
        <!--User Login-->
        <h5 class="title-bg">Авторизация</h5>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#singIn" data-toggle="tab">Вход</a></li>
            <li><a href="#registration" data-toggle="tab">Регистрация</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="singIn">
                <ul>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span><input id="prependedInput" size="16" type="text" placeholder="Логин">
                    </div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span><input id="appendedPrependedInput" size="16" type="text" placeholder="Пароль">
                    </div>
                    <button class="btn btn-small btn-inverse" type="button">Войти</button>

                </ul>
            </div>
            <div class="tab-pane" id="registration">
                <ul>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span><input id="regLogin" size="16" type="text" placeholder="Логин">
                    </div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span><input id="regPass" size="16" type="text" placeholder="Пароль">
                    </div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-lock"></i></span><input id="regRepeatedPass" size="16" type="text" placeholder="Повторите пароль">
                    </div>
                    <button class="btn btn-small btn-inverse" type="button">Зарегестрироваться</button>

                </ul>
            </div>

        </div>

