@using LibOnline.Models.BooksCategories;
@{
    ViewData["Title"] = "Home Page";
}

@Html.Partial("_CategoriesPartail")
@*http://coderhs.com/archive/raty_star*@
<!-- Page Content
================================================== -->
<div class="span6">
    <!--Begin page content column-->
    <h2 class="title-bg">Самые читаемые</h2>
    <div class="row clearfix">

        <ul class="gallery-post-grid holder">
            @for (int i = 0; i < 6; i++)
            {
                @foreach (BooksCategories item in ViewBag.popularBooks)
                {
                    <li class="span2 gallery-item">
                        <a asp-controller="BooksDescription" asp-action="BooksDescription" asp-route-IdBook="@item.IdBook">
                            @*
                                asp-append-version: если имеет значение true, то к пути к файлу скрипта добавляется номер версии
                                Без него не прогружается Image, хоть путь и правильный
                            *@
                            <img asp-append-version="true" src="@item.ImagePath" alt="Gallery">
                        </a>
                        <span class="project-details">
                            <a asp-controller="BooksDescription" asp-action="BooksDescription" asp-route-IdAuthor="@item.IdAuthor">@item.AuthorFullName</a>
                        @item.BookName </span>
                    </li>
                }
            }

            @*@for (var i = 0; i < 6; i++)
                {
                    <li class="span2 gallery-item" >
                        <a asp-controller="BooksDescription" asp-action="BooksDescription"><img src="~/img/Sherlock.jpg" alt="Gallery"></a>
                        <span class="project-details"><a asp-controller="BooksDescription" asp-action="BooksDescription">Шерлок Холмс</a>Казнь Шерлока Холмса</span>
                    </li>
                }*@
        </ul>
        <h5><a asp-controller="BooksCategories" asp-action="BooksCategories" class="pull-right"><i class="icon-th"></i>Полностью</a></h5>
    </div>


    <h2 class="title-bg">Новые</h2>
    <div class="row clearfix">
        <ul class="gallery-post-grid holder">
            @for (var i = 0; i < 6; i++)
            {
                <li class="span2 gallery-item">
                    <a asp-controller="BooksDescription" asp-action="BooksDescription"><img src="~/img/Sherlock.jpg" alt="Gallery"></a>
                    <span class="project-details"><a asp-controller="BooksDescription" asp-action="BooksDescription">Шерлок Холмс</a>Казнь Шерлока Холмса</span>
                </li>
            }
        </ul>
        <h5><a asp-controller="BooksCategories" asp-action="BooksCategories" class="pull-right"><i class="icon-th"></i>Полностью</a></h5>
    </div>
</div> <!--End page content column-->
